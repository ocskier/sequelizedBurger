<h1 class="jumbotron center" style="margin-top: 0;padding:2rem 1rem">Customers!</h1>
{{> button-block path="/burgers"}}
<div class="row">
    <div class="col s1 m2"></div>
    <div class="col s10 m8 burger-col">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">Customers that have eaten a burger!</span>
                    <hr>
                    <ul>
                    {{#each customers}}
                        <li>
                            <div class="col-sm-12 text-center">
                                <p class="customer-name-text">{{customer}}</p>
                                <p class="eaten-text">Num Eaten: {{numBurgersEaten}}</p>
                            </div>
                        </li>
                    {{/each}}
                    </ul>
                </div>
            </div>
    </div>
    <div class="col s1 m2"></div>
</div>