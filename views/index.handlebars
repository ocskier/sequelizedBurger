<h1 class="jumbotron center" style="margin-top: 0;padding:2rem 1rem">Burgers!</h1>
{{!-- {{> button-block path="/customers"}} --}}
<div class="container">
  <div class="row">
    <div class="col s12 m6">
      <div class="card">
        <div class="card-image">
          <img src="assets/rawpixel-760107-unsplash.jpg">
        </div>
        <div class="card-content">
          <span class="card-title center">Burgers that can be eaten!</span>
          <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <li>
              <div class="col-sm-12 text-center">
                <p>{{burger_name}} Burger</p>
                <input id="burger-input-{{id}}" type="hidden" type="text" class="burger_id" value={{id}}>
                <!-- {{Date}} -->
                <button type="button" class="btn btn-lg btn-block btn-primary" data-toggle="modal" data-target="devour-burger-modal"
                  style="background-color:purple">
                  Devour it!
                </button>
              </div>
            </li>
            {{/unless}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
    <div class="col s12 m6">
      <div class="card">
        <div class="card-image">
          <img src="assets/benjamin-wong-484507-unsplash.jpg">
        </div>
        <div class="card-content">
          <span class="card-title center">Burgers already eaten!</span>
          <hr>
          <ul>
            {{#each burgers}}
            {{#if devoured}}
            <li>
              <div>
                <input class="form-control eaten-burger-name" type="text" placeholder="{{burger_name}} Burger" readonly>
                {{#if Customer.customer}}
                <p class="eaten-text">Eaten by {{Customer.customer}}</p>
                {{else}}
                <p class="eaten-text">Anonymously</p>
                {{/if}}
              </div>
            </li>
            {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col s12">
      <!-- Button trigger modal -->
      <button type="button"
        class="btn btn-lg btn-block btn-primary modal-trigger newBtn" data-target="new-burger-modal" style="background-color:purple">
        Add a Burger
      </button>
    </div>
  </div>
</div>
<!-- Modals -->
<div id="new-burger-modal" class="modal">
  <div class="modal-content" style="padding:20">
    <form id="create-form">
      <div class="modal-header">
        <button type="button" class="modal-close">
          <span aria-hidden="true">&times;</span>
        </button>
        <div class="input-field" style="width:100%">
          <label for="bu">Burger Name:</label>
          <input type="text" id="bu" placeholder="Hamburger"
            style="padding: 5px;border: 1px solid black">
        </div>
      </div>
      <div class="modal-body">
        <label>Eat Me?</label><br>
        <p class="input-field">
          <label for="case1">
            <input id="case1" name="group1" type="radio" value="1" checked />
            <span>Eaten!</span>
          </label>
        </p>
        <p class="input-field">
          <label for="case2">
            <input id="case2" name="group1" type="radio" value="0" />
            <span>Not Eaten!</span>
          </label>
        </p>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-primary" style="background-color:purple">Add Burger</button>
      </div>
    </form>
  </div>
</div>

<div id="devour-burger-modal" class="modal">
  <div class="modal-content" style="padding:20">
    <div class="modal-header">
      <h2 class="modal-title" id="modal-title">Enter customer info!</h2>
    </div>
    <div class="modal-content" style="padding:0">
      <form class="button-size devour-form">
        <input class="custom-input" input type="text" placeholder="Customer?">
        <button type="submit" class="btn btn-default mt-1">Devour it!</button>
      </form>
    </div>
  </div>
</div>
